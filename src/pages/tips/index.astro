// src/pages/tips/index.astro
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const tips = await getCollection('tips');
// æŒ‰æ—¥æœŸå€’åº
const sortedTips = tips.sort((a, b) => {
  const dateA = new Date(a.data.date || '2000-01-01').valueOf();
  const dateB = new Date(b.data.date || '2000-01-01').valueOf();
  return dateB - dateA;
});
---

<BaseLayout title="Workshop">
  <div class="workshop-container">
    
    <header class="page-header">
      <a href="/" class="back-btn">â† Home</a>
      <div class="header-content">
        <h1>Workshop</h1>
        <p>Snippets, fixes, and configuration notes.</p>
      </div>
    </header>

    <div class="tips-grid">
      {sortedTips.map((tip) => (
        <a href={`/tips/${tip.slug}`} class="tip-card">
          <div class="card-icon">ğŸ› ï¸</div>
          <h3 class="card-title">{tip.data.title}</h3>
          
          <div class="card-tags">
            {tip.data.tags?.slice(0, 3).map(t => <span>{t}</span>)}
          </div>
        </a>
      ))}
    </div>

  </div>
</BaseLayout>

