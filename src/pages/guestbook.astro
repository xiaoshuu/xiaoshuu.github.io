---
// src/pages/guestbook.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import GuestbookComponent from '../components/Guestbook.astro';
---

<BaseLayout title="Guestbook">
  <div class="guestbook-page-container">
    
    <nav class="top-nav">
      <a href="/" class="back-btn">← Home</a>
    </nav>

    <header class="page-header">
      <h1 class="title">Guestbook.</h1>
      <p class="subtitle">Leave a note, say hi, or share your thoughts.</p>
    </header>
    
    <div class="guestbook-wrapper">
      <GuestbookComponent />
    </div>
  </div>
</BaseLayout>

<style>
  /* 页面内部样式 */
  .guestbook-page-container {
    max-width: 1200px; /* 目标宽度 */
    width: 90%;        /* 手机端适配 */
    margin: 0 auto;
    padding: 2rem 0 5rem;
  }

  .top-nav { margin-bottom: 2rem; }
  .back-btn {
    display: inline-block;
    padding: 8px 16px;
    background: #f4f4f5;
    color: #666;
    border-radius: 20px;
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    transition: all 0.2s;
  }
  .back-btn:hover { background: #e4e4e7; color: #333; }

  .page-header {
    text-align: center;
    margin-bottom: 4rem;
  }

  .title {
    font-family: 'Playfair Display', serif;
    font-size: 3.5rem;
    margin: 0 0 1rem 0;
    color: #333;
  }

  .subtitle {
    color: #888;
    font-size: 1.1rem;
    font-weight: 300;
  }

  .guestbook-wrapper {
    background: #fff;
    border-radius: 24px;
    box-shadow: 0 8px 30px rgba(0,0,0,0.05);
    overflow: hidden;
    width: 100%; /* 确保填满容器 */
  }
</style>

<style is:global>
  /* 强制 body 占满屏幕 */
  body {
    max-width: 100% !important;
    margin: 0 !important;
    padding: 0 !important;
    overflow-x: hidden; /* 防止横向滚动条 */
  }

  /* 如果你的 global.css 限制了 main 标签，也一并解开 */
  main {
    max-width: 100% !important;
    padding: 0 !important;
    margin: 0 !important;
  }
</style>